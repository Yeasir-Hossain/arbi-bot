# AI Trading System Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# ============================================
# AI API Keys (Required for AI decision making)
# ============================================
ANTHROPIC_API_KEY=sk-ant-api03-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# PRIMARY Exchange Configuration (REQUIRED)
# ============================================
# This is your main trading exchange
PRIMARY_EXCHANGE=binance
PRIMARY_API_KEY=your-testnet-api-key-here
PRIMARY_API_SECRET=your-testnet-api-secret-here
PRIMARY_TESTNET=true

# ============================================
# SECONDARY Exchange Configuration (OPTIONAL)
# ============================================
# RECOMMENDED: Bybit (easy signup, testnet available)
# URL: https://testnet.bybit.com/
SECONDARY_EXCHANGE=bybit
SECONDARY_API_KEY=  # Add when you have keys (testnet.bybit.com)
SECONDARY_API_SECRET=  # Add when you have keys
SECONDARY_TESTNET=true

# ============================================
# TERTIARY Exchange Configuration (OPTIONAL)
# ============================================
# RECOMMENDED: OKX (easy signup, good liquidity)
# URL: https://www.okx.com/
TERTIARY_EXCHANGE=okx
TERTIARY_API_KEY=  # Add when you have keys
TERTIARY_API_SECRET=  # Add when you have keys
TERTIARY_TESTNET=false

# ============================================
# Trading Pairs (Multi-pair support)
# ============================================
# Comma-separated list of trading pairs to monitor
TRADING_PAIRS=BTC/USDT,ETH/USDT,SOL/USDT,BNB/USDT,ARB/USDT,OP/USDT

# Primary pair for focus
PRIMARY_TRADING_PAIR=ETH/USDT

# ============================================
# Price Monitoring (NO API KEYS NEEDED)
# ============================================
# The AI monitors these exchanges via public APIs
# to find arbitrage opportunities
MONITOR_EXCHANGES=binance,bybit,okx,kucoin,mexc,gateio,bitget,hucoin

# Use CoinGecko API for aggregated prices (recommended)
COINGECKO_API_KEY=  # Optional - free tier available without key

# Alert when price difference exceeds this %
ARBITRAGE_ALERT_THRESHOLD=0.5  # 0.5% difference

# ============================================
# Trading Strategy Settings
# ============================================
# When AI detects price difference on other exchanges:
# 1. Buy on your exchange if price is lower
# 2. Wait for price convergence
# 3. Sell when prices align

# Enable "shadow arbitrage" strategy
SHADOW_ARBITRAGE_ENABLED=true

# Minimum confidence to act on price difference
ARBITRAGE_MIN_CONFIDENCE=0.75

# Enable multi-exchange trading (when you have multiple API keys)
MULTI_EXCHANGE_TRADING=false  # Set to true when you add secondary/tertiary keys

# ============================================
# Blockchain Configuration (for WETH/DeFi)
# ============================================
BLOCKCHAIN_RPC_URL=http://localhost:8545
BLOCKCHAIN_CHAIN_ID=1337

# Your wallet for WETH/DeFi operations
WALLET_PRIVATE_KEY=0xYourPrivateKeyHere
WALLET_ADDRESS=0xYourWalletAddress

# ============================================
# Database Configuration
# ============================================
# Non-standard ports to avoid conflicts with other services
DATABASE_URL=postgresql://trading:password@localhost:15432/trading_db
REDIS_URL=redis://localhost:16389/0

# ============================================
# Security
# ============================================
# Generate with: python3 -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-fernet-encryption-key-here
JWT_SECRET=your-random-jwt-secret-here

# ============================================
# Trading Configuration
# ============================================
# Risk limits
MAX_POSITION_SIZE=0.15       # 15% of portfolio per trade
MAX_DAILY_TRADES=50          # Maximum trades per day
DAILY_LOSS_LIMIT=0.08        # 8% max daily loss
STOP_LOSS_PERCENT=0.05       # 5% stop loss
TAKE_PROFIT_PERCENT=0.10     # 10% take profit
MIN_CONFIDENCE=0.65          # Minimum AI confidence

# ============================================
# Profit Withdrawal (CRITICAL for AI survival)
# ============================================
AUTO_WITHDRAW_ENABLED=true
WITHDRAW_PERCENTAGE=0.5      # Withdraw 50% of profits
WITHDRAW_WALLET_ADDRESS=0xYourPersonalWalletAddress

# Minimum profit before withdrawal (in USDT)
MIN_WITHDRAW_THRESHOLD=100

# ============================================
# System Configuration
# ============================================
LOG_LEVEL=INFO
DATA_DIR=./data
LOG_DIR=./logs

# ============================================
# Alerting (Recommended)
# ============================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Email alerts (optional)
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
